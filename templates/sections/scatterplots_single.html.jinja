{#  Scatterplots Row for Single Hemisphere -#}
<div class="row">
    {%- for region in ['ME','LO','LOP'] -%}
        {%- if soma_side == 'left' -%}
          {%- set svg_path = '../../output/scatter/' ~ region ~ '_L.svg' -%}
        {%- elif soma_side == 'right' -%}
          {%- set svg_path = '../../output/scatter/' ~ region ~ '_R.svg' -%}
        {%- else -%}
          {%- set svg_path = '../../output/scatter/' ~ region ~ '.svg' -%}
        {%- endif -%}
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="scatterplot-container">
        <object data="{{- svg_path -}}#highlight={{ neuron_data.type | urlencode -}}" type="image/svg+xml" class="grid-image">
          <img src="{{- svg_path -}}" alt="Scatterplot of spatial metrics for {{ region }}" />
        </object>
        <a href="{{- svg_path -}}" download="scatter_{{ region }}{% if soma_side == 'left' %}_L{% elif soma_side == 'right' %}_R{% endif %}.svg" class="scatterplot-download-btn">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2" />
            <path d="M7 11l5 5l5 -5" />
            <path d="M12 4l0 12" />
          </svg>
        </a>
      </div>
    </div>
    {%- endfor -%}
</div>
